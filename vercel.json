service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'customers' collection
    match /customers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Optional: Rules for the 'businesses' collection (for "Hot Products")
    match /businesses/{businessId} {
      allow read: if true; // Allow all to view businesses
      allow write: if request.auth != null && request.auth.uid == businessId;
    }
  }
}